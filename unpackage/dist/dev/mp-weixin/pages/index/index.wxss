          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding-top: 25px;
  padding-bottom: 16rpx;
}
.top-bar {
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  background: #ffffff;
  box-shadow: 0 1px 0 0 rgba(0, 0, 0, 0.1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.top-bar .top-bar-left {
  margin-left: 32rpx;
}
.top-bar .top-bar-left image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-center image {
  width: 88rpx;
  height: 42rpx;
}
.top-bar .top-bar-right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.top-bar .top-bar-right image {
  width: 52rpx;
  height: 52rpx;
}
.top-bar .top-bar-right .add {
  margin: 0 32rpx 0 40rpx;
}
.main {
  padding-top: 104rpx;
  width: 95%;
}
.friend-list {
  height: 96rpx;
  padding: 16rpx 16rpx;
}
.friend-list:active {
  background-color: #f3f4f6;
}
.friend-list .friend-list-l {
  position: relative;
  float: left;
}
.friend-list .friend-list-l image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.friend-list .friend-list-l .tip {
  position: absolute;
  z-index: 10;
  min-width: 20rpx;
  top: -8rpx;
  left: 68rpx;
  height: 36rpx;
  background: #ff5d5b;
  padding: 0 6rpx;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
}
.friend-list .friend-list-r {
  padding-left: 128rpx;
}
.friend-list .friend-list-r .top {
  height: 50rpx;
}
.friend-list .friend-list-r .top .name {
  float: left;
  font-size: 36rpx;
  font-weight: 400;
  color: #272832;
  line-height: 50rpx;
}
.friend-list .friend-list-r .top .time {
  float: right;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 50rpx;
}
.friend-list .friend-list-r .info {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

